# others command
# $ ghostty +list-themes

title = "Ghostty ðŸ‘»"
shell-integration-features = no-cursor,sudo,no-title
font-family = "ComicShannsMono Nerd Font"
# font-family = "CaskaydiaCove Nerd Font"
# font-family = "FantasqueSansM Nerd Font"
font-size = 16
# font-style = Bold
# font-style = Regular
# window-height=1600
# window-width=2560
background-opacity = 0.80
background = #001419
foreground = #cbe0f0
cursor-color = #47ff9c
cursor-style = block
# cursor-style = bar
# cursor-style = underline
cursor-style-blink = true
cursor-text = #011423
cursor-click-to-move = true
mouse-hide-while-typing
background-blur-radius = 25
keybind = cmd+r=reload_config
keybind = cmd+t=unbind
keybind = cmd+n=unbind
window-colorspace = display-p3
copy-on-select = clipboard
# mouse-scroll-multiplier = 2
# window-padding-balance = true
window-save-state = always
window-padding-x = 0
window-padding-y = 0
# window-decoration = false
macos-titlebar-style = transparent
# macos-titlebar-style = hidden
# macos-icon = custom-style
# macos-icon-frame = aluminum
# macos-icon-ghost-color = grey
# macos-icon-screen-color = dark grey,black
macos-window-shadow = true
# theme = "solarized-osaka-night"
theme = "Aura"
# macos-option-as-alt = left
macos-option-as-alt = true
# keybind = alt+left=unbind
# keybind = alt+right=unbind
clipboard-read = allow
clipboard-write = allow
shell-integration = zsh

# Font rendering optimizations for external monitors
# Uncomment these if you need thicker fonts
font-thicken = true 
font-thicken-strength = 128

# Better text rendering quality (especially for external monitors)
alpha-blending = linear-corrected

# For Linux builds using FreeType (uncomment if needed):
# freetype-load-flags = no-hinting
# command = /bin/zsh -c "SESSION_NAME='TMUX'; if tmux has-session -t \$SESSION_NAME 2>/dev/null; then tmux attach-session -t \$SESSION_NAME; else tmux new-session -s \$SESSION_NAME -d && tmux attach-session -t \$SESSION_NAME; fi"
command = /bin/zsh -c "tmux attach -t TMUX || tmux new -s TMUX"
keybind = shift+enter=text:\x1b\r
